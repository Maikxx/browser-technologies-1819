<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partials/head %>
        <link rel="stylesheet" type="text/css" href="../../../../css/join.css">
    </head>
    <body>
        <main>
            <header class="PageHeader">
                <h1 class="PageHeader__title">StudentPoll</h1>
            </header>
            <section class="ContentSection">
                <h2 class="ContentSection__title">
                    <%= room.question %>
                </h2>
                <div class="Row Row--wrap">
                    <% room.options && room.options.forEach(function(option, index) { %>
                        <form
                            action="<%= option.incrementPostUrl %>"
                            method="POST"
                            enctype="application/x-www-form-urlencoded"
                            class="PollForm"
                            data-room-id="<%= room.id %>"
                            data-answer-id="<%= option.answerId %>"
                        >
                            <fieldset class="PollForm__fieldset">
                                <legend class="PollForm__legend">
                                    <%= option.title %>
                                </legend>
                                <button type="submit" class="PollForm__button">
                                    <%= option.title %>
                                </button>
                            </fieldset>
                        </form>
                    <% }) %>
                </div>
            </section>
        </main>
        <script src="https://cdn.jsdelivr.net/npm/socket.io-client@2.2.0/dist/socket.io.js"></script>
        <script src="../../../../scripts/featureDetection.js"></script>
        <script src="../../../../scripts/join.js"></script>
    </body>
</html>